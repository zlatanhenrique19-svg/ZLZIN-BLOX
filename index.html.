<script>
// Part√≠culas simples
const canvas = document.getElementById('particles');
const ctx = canvas.getContext('2d');
canvas.width = window.innerWidth;
canvas.height = window.innerHeight;
let particles = [];
for(let i=0;i<100;i++){
  particles.push({
    x: Math.random()*canvas.width,
    y: Math.random()*canvas.height,
    r: Math.random()*3+1,
    dx: Math.random()*1-0.5,
    dy: Math.random()*1-0.5
  });
}
function draw(){
  ctx.clearRect(0,0,canvas.width,canvas.height);
  for(let p of particles){
    ctx.beginPath();
    ctx.arc(p.x,p.y,p.r,0,Math.PI*2);
    ctx.fillStyle='rgba(106,0,179,0.7)';
    ctx.fill();
    p.x+=p.dx;
    p.y+=p.dy;
    if(p.x>canvas.width)p.x=0;
    if(p.y>canvas.height)p.y=0;
  }
  requestAnimationFrame(draw);
}
draw();

// Login/Cadastro simples
let usuarioAtual = null;
function cadastrar(){
  let user = document.getElementById("user").value;
  let pass = document.getElementById("pass").value;
  localStorage.setItem("user", user);
  localStorage.setItem("pass", pass);
  alert("Cadastro feito!");
}

function login(){
  let user = document.getElementById("user").value;
  let pass = document.getElementById("pass").value;
  if(user === localStorage.getItem("user") && pass === localStorage.getItem("pass")){
    usuarioAtual = user;
    document.getElementById("loginArea").style.display="none";
    document.getElementById("loja").style.display="block";
  } else {
    alert("Dados incorretos!");
  }
}

// Compras
function comprar(valor){
  let numeroPedido = Math.floor(Math.random()*100000);
  document.getElementById("valor").innerText = "Valor: R$ "+valor;
  document.getElementById("pedido").innerText = "Pedido N¬∫: "+numeroPedido;

  let mensagem = "Ol√°, fiz o pagamento! Pedido N¬∫ "+numeroPedido+" Valor: R$ "+valor;
  let link = "https://wa.me/5524981049548?text="+encodeURIComponent(mensagem);

  document.getElementById("zapBtn").onclick = function(){
    window.open(link,"_blank");
  }

  document.getElementById("pagamento").style.display="block";
}

function fechar(){
  document.getElementById("pagamento").style.display="none";
}

function verPedidos(){
  alert("Sistema simples: os pedidos s√£o enviados pelo WhatsApp.");
}
</script>

